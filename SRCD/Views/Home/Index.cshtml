<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Clínicas</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (var clinica in Model)
        {
            <div class="col-md-12 col-lg-4 data-cols">
                <a href="@Url.Action("Details", "Clinica", new { id = clinica.Id})">
                    <img height="200" width="350" src="@Url.Action("ObterImagen1", "Clinica", new { Id = clinica.Id})" alt="@clinica.Nome" />
                </a>
                <div class="text-center">
                    <hr />
                    <a href="@Url.Action("Details", "Clinica", new { id = clinica.Id})">
                        <p class="text-info"><strong>@clinica.Nome</strong></p>
                    </a>
                    <p class="small">@clinica.Morada</p>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <a href="@Url.Action("Index", "Clinica")" class="btn btn-info btn-sm">Ver todas as clínicas</a>
        </div>
    </div>
    <hr />
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Drogarias</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (var drogaria in ViewBag.Drogarias)
        {
        <div class="col-md-12 col-lg-4 data-cols">
            <a href="@Url.Action("Details", "Drogaria", new { id = drogaria.Id})">
                <img height="200" width="350" src="@Url.Action("ObterImagen1", "Drogaria", new { Id = drogaria.Id})" alt="@drogaria.Nome" />
            </a>
            <div class="text-center">
                <hr />
                <a href="@Url.Action("Details", "Drogaria", new { id = drogaria.Id})">
                    <p class="text-info"><strong>@drogaria.Nome</strong></p>
                </a>
                <p class="small">@drogaria.Morada</p>
            </div>
        </div>
        }
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <a href="@Url.Action("Index", "Drogaria")" class="btn btn-info btn-sm">Ver todas as drogarias</a>
        </div>
    </div>
</div>
